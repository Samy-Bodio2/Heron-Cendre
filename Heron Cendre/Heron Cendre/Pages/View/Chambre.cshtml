@page
@model Heron_Cendre.Pages.View.ChambreModel
@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Restaurant</title>
    <link rel="stylesheet" href="~/css/chambreCss.css" />
</head>

    <nav class="navbar">
        <ul>
            <li><a class="linav" asp-page="restaurant" target="_blank">Restaurant</a></li>
            <li><a class="linav" asp-page="Prestation" target="_blank">Prestation</a></li>
            <li id="H">Chambre du Heron</li>
            <li><a class="linav" asp-page="propos" target="_blank">A propos</a></li>
            <li><a class="linav" asp-page="evenement" target="_blank">Evènement</a></li>
        </ul>
    </nav>

    <div class="max">
        @foreach (var chambre in Model.Chambres)
        {
            <div class="carte">

				<img src='@chambre.photo_chambre' alt="image de bague">

                <p>Chambre Numero @chambre.id_chambre</p>
                <p>@chambre.tarif_chambre F</p>
                <button>Reserver</button>
            </div>
        }
    </div>
    <div class="vil">@Model.test</div>

<style>
        .vil{
        height:30px;
        width:60px;
        position: absolute;
        top:100px;
        right:115px;
        border:3px solid black;
        border-radius:20px;
        text-align:center;
    }
    .max {
        flex-wrap: wrap;
        display: flex;
        position: absolute;
        top: 150px;
    }

    .carte {
        height: 400px;
        width: 350px;
        text-align: center;
        background-color: #f1f1f1;
        border-radius: 10px;
        margin: 20px;
    }

    img {
        height: 250px;
        width: 100%;
    }
</style>