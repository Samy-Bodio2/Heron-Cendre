@page
@model Heron_Cendre.Pages.View.PrestationModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/chambreCss.css" />
    <title>Document</title>
</head>

<nav class="navbar">
    <ul>
        <li><a class="linav" asp-page="evenement" target="_blank">Évenement</a></li>
        <li><a class="linav" asp-page="restaurant" target="_blank">Restaurant</a></li>
        <li id="H">Prestation</li>
        <li><a class="linav" asp-page="../Index" target="_blank">Accueil</a></li>
        <li><a class="linav" asp-page="propos" target="_blank">À propos</a></li>
    </ul>
</nav>

<div class="max">
    @foreach(var prt in Model.Presta){
        <div class="carte">
            <img src='@prt.photo1' alt="image de prestation">
                <h3>@prt.titre_prestation</h3>
                    <p>@prt.tarif_prestation</p>
            @if(@Model.test == null)
            {
                <a asp-page="plsConnect"><button>Reserver</button></a>
            }
            else
            {
                <a asp-page="/CarteInfo/cartePrestation"><button>Reserver</button></a>
            }

        </div>
    }
</div>

<div class="vil">@Model.test</div>

<style>
    .vil {
        height: 30px;
        width: 60px;
        position: absolute;
        top: 100px;
        right: 115px;
        border: 3px solid black;
        border-radius: 20px;
        text-align: center;
    }
    body {
        font-family: 'andika';
        height: 100vh;
        background: linear-gradient(90deg,rgb(251, 255, 37),40%,rgb(255, 255, 255));
        margin: 0;
    }
        .max {
        flex-wrap: wrap;
        display: flex;
        position: absolute;
        top: 150px;
    }

    .carte {
        height: 400px;
        width: 350px;
        text-align: center;
        background-color: #f1f1f1;
        border-radius: 10px;
        margin: 20px;
    }

    img {
        height: 250px;
        width: 100%;
    }
</style>
