@page
@model Heron_Cendre.Pages.Heron_Model.Prestation.UpdatePrestationModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

@if (Model.errorMesssage.Length > 0)
{
    <p class="text-danger">@Model.errorMesssage</p>
}
<form method="post">
    <div class="row">
        <input type="hidden" class="form-control" name="Id" value="@Model.presta.id_prestation"/>
        <label class="text-black" for="Title">Title</label>
        <input class="form-control text-black" type="text" name="Title" value="@Model.presta.titre_prestation"/>
    </div>
    <div class="row">
        <label class="text-black" for="tarif">Tarif</label>
        <input class="form-control text-black" type="text" name="tarif" value="@Model.presta.tarif_prestation"/>
    </div>
    <div class="row">
        <label class="text-black" for="planing">Planing</label>
        <input class="form-control text-black" type="text" name="planing" value="@Model.presta.planing_prestation"></input>
    </div>
    <br/>
    <div class="row">
        <label class="text-black" for="tarif">Image</label>
        <input class="form-control text-black" type="file" name="photo" value="@Model.presta.photo1" />
    </div>
    <br />
    <div class="row d-flex justify-content-between">
        <button class="btn btn-primary">Submit</button>
        <a class="btn btn-outline-primary" asp-page="IndexPrestation">Cancel</a>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <p class="text-success">@Model.successMessage</p>
    }
</form>