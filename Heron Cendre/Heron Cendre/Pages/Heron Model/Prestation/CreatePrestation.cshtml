@page
@model Heron_Cendre.Pages.Heron_Model.Prestation.createPrestationModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/createPresta.css">
    <title>CreatePrestation</title>
</head>
@if (Model.errorMesssage.Length > 0)
{
    <p class="text-danger">@Model.errorMesssage</p>
}
    <form method="post" >
        <div class="row1">
            <label for="titre">Titre Prestation </label>
            <input type="Text" name="titre"></input>
        </div>
        <div class="row2">
            <label for="tarif">Tarif Prestation </label>
            <input type="text" name="tarif"></input>
        </div>
        <div class="row3">
            <label for="Planning" id="lbl1">Planning prestation </label>
            <input type="Text" name="Planning"></input>
        </div>
        <div class="row4">
            <label for="photo">Photo prestation </label>
            <input type="file" name="photo" id="pht"></input>
        </div>
        <button type="submit">Envoyer</button>
    @if (Model.successMessage.Length > 0)
    {
        <p class="text-success">@Model.successMessage</p>
    }
    </form>
 