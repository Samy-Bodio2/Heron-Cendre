@page
@model Heron_Cendre.Pages.Heron_Model.Chambre.CreateChambreModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/createPresta.css">
    <title>CreatePrestation</title>
</head>
@if (Model.errorMesssage.Length > 0)
{
    <p class="text-danger">@Model.errorMesssage</p>
}
<form method="post">
    <div class="row2">
        <label for="tarif">Tarif Chambre </label>
        <input type="text" name="tarif"></input>
    </div>
    <div class="row4">
        <label for="photo">Photo Chambre </label>
        <input type="file" name="photo" id="pht" value=""></input>
    </div>
    <button type="submit">Envoyer</button>
    @if (Model.successMessage.Length > 0)
    {
        <p class="text-success">@Model.successMessage</p>
    }
</form>